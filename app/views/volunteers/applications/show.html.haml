%p= link_to "Back to Applications Overview", volunteers_applications_path

%h3 Application
= render partial: 'applications/show', locals: { user: @user }

- if !logged_in_as?(@user) && current_user.application_reviewer?
  %h3= @user.name

  - if current_user.voted_on?(@application)
    - vote = current_user.vote_for(@application)
    %p
      You voted <strong>#{vote.display_value}</strong>
      #{time_ago_in_words(vote.created_at)} ago

  = form_for @vote, url: volunteers_votes_path, method: :post do |f|
    = f.hidden_field :application_id, value: @application.id
    = f.submit 'Yes', name: 'vote_yes', disabled: vote && vote.value
    = f.submit 'No',  name: 'vote_no',  disabled: vote && !vote.value

  - if current_user.voted_on?(@application)
    #{ link_to 'Remove your vote', volunteers_vote_path, method: :delete }

- elsif !logged_in_as?(@user) && current_user.member?
  %h3= @user.name
  %button{ disabled: true }
    Only application reviewers Can Vote

%h3 Status

%table.table
  %tr
    %td Submitted
    %td
      - if @application.submitted_at
        = pretty_timestamp(@application.submitted_at)
        %small= "(#{time_ago_in_words(@application.submitted_at)} ago)"
  %tr
    %td Votes <strong>for</strong> attendance (#{@application.yes_votes.size})
    %td
      - if @application.yes_votes.any?
        - @application.yes_votes.each do |vote|
          = link_to vote.user.username, volunteers_user_path(vote.user)
          <br />
      - else
        \--
  %tr
    %td Votes <strong>against</strong> attendance (#{@application.no_votes.size})
    %td= @application.no_votes.any? ? 'hidden' : '--'
  %tr
    %td Not yet voted (#{@application.not_voted_count})
    %td= @application.not_voted_count > 0 ? 'hidden' : '--'

%h3 Comments
- @comments.each do |comment|
  - commenter = comment.user
  .comment
    = link_to user_gravatar(commenter, 20), volunteers_user_path(commenter)
    = "#{link_to commenter.username, volunteers_user_path(commenter), title: commenter.name}:".html_safe
    = comment.body
    %small{ title: comment.created_at }
      = "#{time_ago_in_words(comment.created_at)} ago"


= form_for [:volunteers, @application, Comment.new], class: "form-horizontal" do |f|
  .comment.form-group
    .mb-5
      = link_to user_gravatar(current_user, 20), volunteers_user_path(current_user)
      = "#{link_to current_user.username, volunteers_user_path(current_user)}:".html_safe
    = f.hidden_field :application_id, value: @application.id
    = f.text_area :body, rows: 3, class: "form-control"
    %fieldset= f.submit 'Add comment', class: "btn btn-primary pull-right"


%p= link_to "Back to Applications Overview", volunteers_root_path
